@page "/Customers/"
@rendermode InteractiveServer
@inject IUser<User> UserRepo

<h3>List Users</h3>

<table>
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>           
        </tr>
    </thead>
    <tbody>
        {
            @if (ListOfUsers == null)
            {
                <tr>
                    <td colspan="9">
                        <span>Loading...</span>
                    </td>
                </tr>
            }
            else if (ListOfUsers.Count == 0)
            {
                <tr>
                    <td colspan="9">
                        <span>No customers found.</span>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var user in ListOfUsers)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            <EditUserButton Id="@user.Id"></EditUserButton>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

@code {
    List<User> ListOfUsers = null;

    protected override async Task OnInitializedAsync()
    {
        
        ListOfUsers = await UserRepo.GetAllAsync();
    }
}
